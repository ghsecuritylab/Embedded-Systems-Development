#include "PanasonicAC_Wired.h"
uint8_t click_count = 0;

void PanasonicAC_Wired_Init(){
	click_count = 3;
	while (click_count >0){
    EXPAND4click_set(4); //MODE from FAN to COOL
    delayUS(500000);
    EXPAND4click_set(0);
    delayUS(500000);
    click_count--;
	}
}


void PanasonicAC_Wired_PowerOn(void){
	EXPAND4click_set(8); //ON OFF
	delayUS(500000);
}

void PanasonicAC_Wired_SetMode(){
    EXPAND4click_set(4); //MODE
    delayUS(500000);
    EXPAND4click_set(0);
    delayUS(500000);
}

